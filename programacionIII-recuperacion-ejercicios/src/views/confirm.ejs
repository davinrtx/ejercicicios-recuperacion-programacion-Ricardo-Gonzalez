<%- include('partials/header', { title: 'Confirmar Nombre' }) %>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h1>Confirmar Nombre</h1>
                <p>¿Es correcto el nombre <strong><%= name %></strong>?</p>
                <form action="/confirm-name" method="POST" class="mb-3">
                    <input type="hidden" name="name" value="<%= name %>"> <!-- Input oculto con el nombre a confirmar -->
                    <button type="submit" class="btn btn-primary">Sí, agregar nombre</button> <!-- Botón para confirmar -->
                </form>
                <a href="/form" class="btn btn-secondary">No, volver al formulario</a> <!-- Enlace para volver al formulario -->
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>